#include "led.h"
#include <msp430.h>

#define LED_RED BIT0               // P1.0
#define LED_GREEN BIT6             // P1.6
#define LEDS (BIT0 | BIT6)

void led_init() 
{  
  P1DIR |= LEDS;
  P1OUT &= ~LEDS;   
}

void toggleRed()
{
  P1OUT ^= LED_RED;
}

void toggleGreen()
{
  P1OUT ^= LED_GREEN;
}
